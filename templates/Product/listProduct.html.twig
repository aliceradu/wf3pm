{% extends 'base.html.twig' %}

{% block title %}List of products{% endblock %}

{% block body %}	

	 <h1>{{ "LIST.PRODUCT"|trans }}</h1>
	 
	 
	<div class="container" >
 
 		<div class="row">
 	
        {% for value in product %}
	    
	   	 	<div class="col-sm-4">
	   	 	
    	   	 	<div class="card text-white bg-warning mb-3 mb-3" style="max-width: 18rem;">
                  <div class="card-header">{{value.version}}</div>
                  <div class="card-body">
                    <h5 class="card-title">{{value.name}}</h5>
                    {#<p class="card-text">{{value.description}}</p>#}
                  </div>
                  <div class="card-footer">
                   	<button class="btn btn-block btn-success"><a href="{{ path('details_product') }}?id={{value.id}}"> Details</a></button>
                  </div>
                </div>
	                             
          	</div> 
                       			 	
		 {% endfor %}
	 	</div>    		 
	</div>
	 	
{% endblock %}
